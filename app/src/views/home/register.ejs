    <div class="login-box">
        <h2>Login</h2>
        <form>
          <div class="user-box">
            <input id="id" type="text" name="" required="">
            <label>아이디</label>
          </div>
          <div class="user-box">
            <input id="name" type="text" name="" required="">
            <label>이름</label>
          </div>
          <div class="user-box">
            <input id="psword" type="text" name="" required="">
            <label>비밀번호</label>
          </div>
          <div class="user-box">
            <input id="confirm-psword" type="password" name="" required="">
            <label>비밀번호 확인</label>
          </div>
          <button>Sign up</button>
          <div id="sign"><p class="message">Already registered? <a href="/login">login</a></p></div>
        </form>
      </div>
